<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/elbum_ex_001"
        android:id="@+id/elbum_view_left"
        android:layout_gravity="left"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"

        />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/elbum_ex_003"
        android:id="@+id/elbum_view_right"
        android:layout_gravity="right"
        android:layout_marginRight="100dp"
        android:layout_marginTop="100dp"

        />


    <Switch
        android:text="AR"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ar_switch" />

    <Button
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_vertical|end"
        android:background="@drawable/btn_arrow_r"
        android:id="@+id/ar_right_button" />

    <Button
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/btn_arrow_l"
        android:id="@+id/ar_left_button" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wrap_layout"
        android:background="#ccffffff"
        android:gravity="center"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="160dp"
            android:background="@drawable/elbum_ex_002"
            android:id="@+id/elbum_view_center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_height="160dp" />

        <ImageView
            android:id="@+id/ar_like_button"
            android:background="@drawable/btn_like_on"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="2dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:text="38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="4dp"
            android:textSize="10sp"
            android:id="@+id/ar_like" />

        <TextView
            android:text="Music title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal|bottom"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/ar_music_title" />

        <TextView
            android:text="Artist name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginBottom="6dp"
            android:id="@+id/ar_artist_name" />

    </LinearLayout>


</FrameLayout>